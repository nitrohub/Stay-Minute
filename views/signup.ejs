<%- include ('partials/header.ejs') %>
     
<div class="container">
    <center>
        <div class="img-thumbnail frm">
    <h1>Signup</h1>    
        <form method="POST" action="/signup">
            <div class="form-group">
                <input type = "text" name = "name" placeholder = "Name" class="form-control">
            </div>
            <div class="form-group">
                <input type = "number" name = "age" placeholder = "Age" class="form-control">
            </div>
            <div class="form-group">
                <input type = "text" name = "contact" placeholder = "contact details" class="form-control">
            </div>
            <div class="form-group">
                <input type = "text" name="username" id="username" placeholder="Email" class="form-control">
                <span id="email"></span>
            </div>
            <div class="form-group">
                <input type = "password" id="pwd" name="password" class="form-control" placeholder = "Password">
                <span id="password"></span>
            </div>
            <div class="form-group">
                <button class="form-control button" id="butn"><i class="fa fa-user-plus" aria-hidden="true"></i>signup</button>
            </div>
        </form>
    </div>
    </center>
    
<script>
     $("#username").blur(function(){
                var username = $("#username").val(); 
                var length = $("#username").val().length;
                var pattern = "^[a-zA-Z0-9_\\.\\+\\-%]{1,}@[A-Za-z0-9\\._]{2,}\.[a-zA-z]{2,}$";
                var patt = new RegExp(pattern);
                var res = patt.test(username);
                if(res){
                        $("#email").empty();
                }else{
                        $("#email").html("<div style='color:red'>Please Enter proper email Id</div>");
                }
        })

        $("#pwd").blur(function(){
                var password = $("#pwd").val();               
                        pattern= "(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*[!@#\\$%\\^\\*]).{8,}";
                        var patt = new RegExp(pattern);
                        var res =  patt.test(password);
                        if(!res){
                        $("#password").html("<div style='color:red'>Password must contain an uppercase,lowercase character and numbers as well as special characters and 8 or more characters</div>");
                        }else{
                                $("#password").empty();
                        }
        })
</script>

    </div>
